@page
@model CoffeeShopManager.Pages.Products.IndexModel

<h3>Danh sách sản phẩm</h3>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Hình ảnh</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Category)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Ảnh sản phẩm" width="70" height="70" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        @item.Description
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

