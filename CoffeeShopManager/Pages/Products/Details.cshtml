@page
@model CoffeeShopManager.Pages.Products.DetailsModel

<h4>Thông tin sản phẩm</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Tên</dt>
    <dd class="col-sm-10">@Model.Product.Name</dd>

    <dt class="col-sm-2">Mô tả</dt>
    <dd class="col-sm-10">@Model.Product.Description</dd>

    <dt class="col-sm-2">Giá</dt>
    <dd class="col-sm-10">@Model.Product.Price.ToString("N0") VNĐ</dd>

    <dt class="col-sm-2">Danh mục</dt>
    <dd class="col-sm-10">@Model.Product.Category?.Name</dd>

    <dt class="col-sm-2">Hình ảnh</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
        {
            <img src="@Model.Product.ImagePath" alt="Product Image" width="150" class="img-thumbnail" />
        }
        else
        {
            <span class="text-muted">Không có hình ảnh</span>
        }
    </dd>
</dl>

<div class="mt-3">
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Product.Id">Chỉnh sửa</a>
    <a class="btn btn-secondary" asp-page="./Index">Quay lại danh sách</a>
</div>
