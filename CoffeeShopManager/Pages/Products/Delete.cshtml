@page
@model CoffeeShopManager.Pages.Products.DeleteModel

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <h4>Thông tin sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Product.Price.ToString("N0") VNĐ</dd>

        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Product.Category?.Name</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
            {
                <img src="@Model.Product.ImagePath" width="150" class="img-thumbnail" />
            }
            else
            {
                <span class="text-muted">Không có hình ảnh</span>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>
