@page
@model CoffeeShopManager.Pages.Shifts.IndexModel

<h3>Danh sách ca làm việc</h3>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Lập lịch ca mới
    </a>
    <a asp-page="Report" class="btn btn-info ms-2">
        <i class="bi bi-bar-chart"></i> Xem báo cáo
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nhân viên</th>
            <th>Ngày</th>
            <th>Ca</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Thời lượng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shift)
        {
            <tr>
                <td>@item.Employee?.Name</td>
                <td>@item.ShiftDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.ShiftType == "Morning")
                    {
                        <span class="badge bg-primary">Sáng</span>
                    }
                    else if (item.ShiftType == "Afternoon")
                    {
                        <span class="badge bg-warning">Chiều</span>
                    }
                    else if (item.ShiftType == "Evening")
                    {
                        <span class="badge bg-dark">Tối</span>
                    }
                    else
                    {
                        @item.ShiftType
                    }
                </td>
                <td>@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</td>
                <td>
                    @if (item.Status == "Scheduled")
                    {
                        <span class="badge bg-info">Đã lên lịch</span>
                    }
                    else if (item.Status == "Completed")
                    {
                        <span class="badge bg-success">Hoàn thành</span>
                    }
                    else
                    {
                        @item.Status
                    }
                </td>
                <td>@item.Duration.TotalHours.ToString("N2") giờ</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>