@page
@model CoffeeShopManager.Pages.Shifts.EditModel

<h4>Chỉnh sửa ca làm việc</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shift.Id" />

            <div class="form-group mb-3">
                <label asp-for="Shift.EmployeeId" class="control-label"></label>
                <span class="text-danger">*</span>
                <select asp-for="Shift.EmployeeId" class="form-control" asp-items="Model.EmployeeList">
                    <option value="">-- Chọn nhân viên --</option>
                </select>
                <span asp-validation-for="Shift.EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shift.ShiftType" class="control-label"></label>
                <span class="text-danger">*</span>
                <select asp-for="Shift.ShiftType" class="form-control">
                    <option value="">-- Chọn ca --</option>
                    <option value="Morning">Sáng (06:00 - 11:00)</option>
                    <option value="Afternoon">Chiều (13:00 - 17:00)</option>
                    <option value="Evening">Tối (17:00 - 22:00)</option>
                </select>
                <span asp-validation-for="Shift.ShiftType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shift.ShiftDate" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="Shift.ShiftDate" class="form-control" type="date" />
                <span asp-validation-for="Shift.ShiftDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Shift.Status" class="control-label"></label>
                <select asp-for="Shift.Status" class="form-control">
                    <option value="Scheduled">Đã lên lịch</option>
                    <option value="Completed">Hoàn thành</option>
                </select>
                <span asp-validation-for="Shift.Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}