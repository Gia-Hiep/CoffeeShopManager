@page
@model CoffeeShopManager.Pages.Shifts.ReportsModel

<h3>Báo cáo giờ làm của nhân viên</h3>

<form method="get" class="mb-3">
    <div class="form-group mb-3">
        <label class="control-label">Chọn nhân viên:</label>
        <select asp-for="SelectedEmployeeId" class="form-control w-25 d-inline-block" asp-items="Model.EmployeeList" onchange="this.form.submit()">
            <option value="">-- Tất cả nhân viên --</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label class="control-label">Chọn khoảng thời gian:</label>
        <select asp-for="ReportType" class="form-control w-25 d-inline-block" onchange="this.form.submit()">
            <option value="Weekly">Theo tuần</option>
            <option value="Monthly">Theo tháng</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Chọn ngày bắt đầu:</label>
        <input asp-for="StartDate" class="form-control w-25 d-inline-block" type="date" />
        <button type="submit" class="btn btn-primary ms-2">
            <i class="bi bi-search"></i> Xem báo cáo
        </button>
    </div>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

@if (Model.WorkHoursReport.Any())
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nhân viên</th>
                <th>Tổng giờ làm</th>
                <th>Ngày làm việc</th>
                <th>Tiền lương</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WorkHoursReport)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.TotalHours.ToString("N2") giờ</td>
                    <td>
                        @if (item.ShiftDates != null && item.ShiftDates.Any())
                        {
                            @string.Join(", ", item.ShiftDates.Select(d => d.ToString("dd/MM/yyyy")))
                        }
                        else
                        {
                            <span>Không có ngày làm việc</span>
                        }
                    </td>
                    <td>@item.Salary.ToString("N0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Không có dữ liệu ca làm việc cho nhân viên và khoảng thời gian đã chọn.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}