@model List<CoffeeShopManager.Models.TopProductModel>

<div class="card mt-4">
    <div class="card-header bg-dark text-white">
        <h4 class="card-title">Top @Model.Count Sản Phẩm Bán Chạy</h4>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <ul class="list-group">
                @foreach (var product in Model)
                {
                    <li class="list-group-item d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@product.ImagePath" alt="Ảnh sản phẩm" width="50" height="50" class="img-thumbnail me-3" />
                        }
                        else
                        {
                            <span class="text-muted me-3">Không có ảnh</span>
                        }
                        <div>
                            <strong>@product.Name</strong><br />
                            Giá: @product.Price.ToString("N0") VNĐ<br />
                            Số lượng bán: @product.TotalQuantity
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Chưa có sản phẩm nào được bán.</p>
        }
    </div>
</div>