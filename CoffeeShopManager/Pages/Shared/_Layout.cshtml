<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coffee Shop Manager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/coffee-shop.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3c2f2f;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/logo.png" alt="Coffee Shop Logo" style="height: 40px; margin-right: 10px;" />
                    Coffee Shop Manager
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="navbar-text me-3">Xin chào, @User.Identity.Name</span>
                        <form asp-page="/Account/Logout" asp-area="Identity" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Đăng xuất</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                    </li>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="fas fa-home me-1"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Categories/Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Products/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Orders/Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Employees/Index">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Tables/Index">Tables</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shifts/Index">
                                Shifts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Reports/RevenueReport">Revenue Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Bill/BillByTable">
                                 Bill By Table
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <main class="col-12 px-md-4 pt-4">
                <h2 class="mb-4">@ViewData["Title"]</h2>
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p>© 2025 Coffee Shop Manager. All rights reserved.</p>
            <p>Contact: info@coffeeshop.com | Phone: (+84) 123 456 789</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>