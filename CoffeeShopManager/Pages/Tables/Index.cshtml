@page
@model CoffeeShopManager.Pages.Tables.IndexModel

<h3>Danh sách bàn</h3>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm bàn mới
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Table[0].TableNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Table[0].Capacity)</th>
            <th>@Html.DisplayNameFor(model => model.Table[0].Status)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Table)
        {
            <tr>
                <td>@item.TableNumber</td>
                <td>@item.Capacity</td>
                <td>
                    @if (item.Status == "Available")
                    {
                        <span class="badge bg-success">Còn trống</span>
                    }
                    else if (item.Status == "Occupied")
                    {
                        <span class="badge bg-warning">Đang sử dụng</span>
                    }
                    else
                    {
                        @item.Status
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>