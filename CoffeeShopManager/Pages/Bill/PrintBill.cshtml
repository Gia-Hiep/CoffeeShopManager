@model dynamic
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bill - Table @Model.TableNumber</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .invoice {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h2 {
                margin: 0;
            }

        .details {
            margin-bottom: 20px;
        }

        .items table {
            width: 100%;
            border-collapse: collapse;
        }

        .items th, .items td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .items th {
            background-color: #f2f2f2;
        }

        .total {
            text-align: right;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="invoice">
        <div class="header">
            <h2>Coffee Shop Bill</h2>
            <p>Table: @Model.TableNumber | Date: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
        <div class="details">
            <p><strong>Total Bill:</strong> @Model.TotalBill VNĐ</p>
        </div>
        <div class="items">
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        foreach (var detail in order.OrderDetails)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@detail.Product?.Name</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.UnitPrice VNĐ</td>
                                <td>@(detail.Quantity * detail.UnitPrice) VNĐ</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>