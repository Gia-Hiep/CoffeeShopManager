@model CoffeeShopManager.Pages.BillByTableModel
@{
    ViewData["Title"] = "Bill By Table";
    if (!string.IsNullOrEmpty(Model.PaymentMessage))
    {
        ViewData["PaymentMessage"] = Model.PaymentMessage;
        ViewData["IsSuccess"] = Model.PaymentSuccess;
        ViewBag.PaymentMessage = Model.PaymentMessage;
        ViewBag.IsSuccess = Model.PaymentSuccess;
    }
}

