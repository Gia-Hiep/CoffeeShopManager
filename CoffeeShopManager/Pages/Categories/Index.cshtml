@page
@model CoffeeShopManager.Pages.Categories.IndexModel

<h3>Danh sách danh mục</h3>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm danh mục mới
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category[0].Description)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        @item.Description
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>