@page
@model CoffeeShopManager.Pages.Employees.IndexModel

<h3>Danh sách nhân viên</h3>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm nhân viên mới
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Employee[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Employee[0].Position)</th>
            <th>@Html.DisplayNameFor(model => model.Employee[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Employee[0].Phone)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employee)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (item.Position == "Waiter")
                    {
                        <span class="badge bg-secondary">Phục vụ</span>
                    }
                    else if (item.Position == "Barista")
                    {
                        <span class="badge bg-info">Pha chế</span>
                    }
                    else if (item.Position == "Manager")
                    {
                        <span class="badge bg-success">Quản lý</span>
                    }
                    else
                    {
                        @item.Position
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        @item.Email
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Phone))
                    {
                        @item.Phone
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>