@page
@model CoffeeShopManager.Pages.Reports.RevenueReportModel
@{
    ViewData["Title"] = "Revenue Report";
}

<h1>Revenue Report</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="StartDate" class="form-label">From Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="EndDate" class="form-label">To Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-page="./RevenueReport" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

@if (Model.Orders.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Table</th>
                <th>Employee</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Table.TableNumber</td>
                    <td>@order.Employee.Name</td>
                    <td>
                        @order.TotalAmount VNĐ
                    </td>
                    <td>@order.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-info">
        <strong>Total Revenue: </strong> @Model.TotalRevenue VNĐ
    </div>
}
else
{
    <div class="alert alert-warning">
        No orders found for the selected date range.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}